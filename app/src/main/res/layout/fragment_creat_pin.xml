<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"

    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_create_pin_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_left_5dp"
                android:text="@string/cancel"
                android:textColor="@color/colorInckNevyLight"
                android:textSize="@dimen/font_15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/fragment_create_pin_tv_title"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_20sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/fragment_create_pin_et_new_pin"
            style="@style/style_et_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_create_pin_et_new_pin_hint"
            android:inputType="number"
            android:maxLength="4"

            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fragment_create_pin_et_confirm_pin"
            style="@style/style_et_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_create_pin_et_confirm_pin_hint"
            android:inputType="number"
            android:maxLength="4"

            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_create_pin_bn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/fragment_create_pin_btn_save" />


    </LinearLayout>

</LinearLayout>