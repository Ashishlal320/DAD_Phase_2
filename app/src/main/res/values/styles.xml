<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorOrange</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <!-- style for common title-->
    <style name="TextViewTitleStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">@dimen/fragment_registration_margin_top</item>

    </style>

    <!-- style for common subsequence title with white underline -->
    <style name="TextViewTitleWhiteStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/fragment_registration_margin_top</item>

    </style>

    <style name="style_et_login">
        <!--<item name="com.flagship.creatopia.app:font_name">ProximaNova-Regular</item>-->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:layout_marginBottom">@dimen/commenspacing_05</item>
        <item name="android:background">@drawable/drawable_grey_rounded_margin_et</item>
        <item name="android:padding">@dimen/commenspacing_10</item>
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <style name="style_tv_commens">
        <!--<item name="com.flagship.creatopia.comman:font_name">ProximaNova-Semibold</item>-->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_14sp</item>
    </style>

    <!--add here to customize view pager -->
    <style name="style_vp_fontappearence" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppDialogThemeNonTras" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>


    <style name="style_txt_light_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_txt_light_black_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_txt_regular_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CropButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_crop_button</item>
    </style>

    <style name="checkbox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="dialog_theme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
