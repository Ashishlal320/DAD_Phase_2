<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:state_checked="true" android:top="0dp">
        <shape android:shape="rectangle">
            <size android:width="30dp" android:height="30dp" />
            <corners android:radius="20dp" />
            <solid android:color="@color/color_alert_green" />
            <stroke android:width="1dp" android:color="#ffff" />
        </shape>
    </item>
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:state_checked="false" android:top="0dp">
        <shape android:shape="rectangle">
            <size android:width="30dp" android:height="30dp" />
            <corners android:radius="20dp" />
            <solid android:color="@color/colorLightGrey" />
            <stroke android:width="1dp" android:color="#ffff" />
        </shape>
    </item>

</selector>