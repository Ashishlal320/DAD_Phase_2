<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewFlipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_i_m_ok_index_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/TAGE_ENTER_YOUR_PIN"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fragment_i_m_ok_send_pin_et_pinn"
                style="@style/style_et_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:hint="@string/TAG_ENTER_OLD_TEMP_PIN"
                android:inputType="number"
                android:maxLength="4"
                android:paddingEnd="20dp"
                android:textAlignment="viewStart"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/fragment_i_m_ok_send_pin_tv_sendd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:text="@string/TAGE_SEND_OK_MSG"
                android:textColor="@color/colorInckNevyLight"
                android:textSize="@dimen/font_15sp"
                android:textStyle="bold"

                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left_5dp"
            android:layout_marginTop="@dimen/margin_top_10dp"

            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/TAGE_REQUIRE_PIN"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"

                android:gravity="center"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:maxLength="4"
                        android:text="@string/TAGE_NEW_PIN"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold"


                        />


                    <EditText
                        android:id="@+id/fragment_i_m_ok_requiew_pin_et_new_pin"
                        style="@style/style_et_login"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="0.4"
                        android:hint="@string/TAG_ENTER_OLD_TEMP_PIN"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:text="@string/TAGE_CONFIRM_PIN"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold"

                        />


                    <EditText
                        android:id="@+id/fragment_i_m_ok_requiew_pin_et_confirm_pin"
                        style="@style/style_et_login"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="0.40"
                        android:hint="@string/TAG_RE_ENTER_PIN"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textAlignment="viewStart"

                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/fragment_i_m_ok_requiew_pin_tv_validate_pin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"

                        android:text="@string/TAG_VALIDATE_PIN"
                        android:textColor="@color/colorInckNevyLight"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/fragment_i_m_ok_requiew_pin_tv_save_pin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:text="@string/TAG_SAVE_PIN"
                        android:textColor="@color/colorInckNevyLight"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold"

                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fragment_i_m_ok_requiew_pin_tv_reset_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="@string/TAG_RESEt_PIN"
                        android:textColor="@color/colorInckNevyLight"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fragment_i_m_ok_requiew_pin_tv_forgot_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:text="@string/TAG_FORGOT_PIN"
                        android:textColor="@color/colorInckNevyLight"
                        android:textSize="@dimen/font_15sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ViewFlipper>
