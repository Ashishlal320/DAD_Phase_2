<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragement_change_password_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/fragment_change_password_tv_cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/fragment_change_password_tv_title"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"

        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <EditText
            android:id="@+id/fragment_change_password_et_old_password"
            style="@style/style_et_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:hint="@string/fragment_change_password_et_old_password"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlack" />


        <EditText
            android:id="@+id/fragment_change_password_et_new_password"
            style="@style/style_et_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:hint="@string/fragment_change_password_et_new_password_hint"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlack" />


        <EditText
            android:id="@+id/fragment_change_password_et_confirm_password"
            style="@style/style_et_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:hint="@string/fragment_change_password_et_confirm_password_hint"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlack" />

        <Button
            android:id="@+id/fragment_change_password_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_change_password_btn_Save" />

    </LinearLayout>
</LinearLayout>