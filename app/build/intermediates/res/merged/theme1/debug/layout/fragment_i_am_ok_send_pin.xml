<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TAGE_ENTER_YOUR_PIN"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_15sp"
        android:textStyle="bold"

        />


    <EditText
        android:id="@+id/fragment_i_m_ok_send_pin_et_pin"
        style="@style/style_et_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:hint="@string/TAG_ENTER_OLD_TEMP_PIN"
        android:inputType="number"
        android:maxLength="4"
        android:paddingRight="20dp"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/fragment_i_m_ok_send_pin_tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TAGE_SEND_OK_MSG"
        android:textColor="@color/colorInckNevyLight"
        android:textSize="@dimen/font_15sp"
        android:textStyle="bold"

        />


</LinearLayout>